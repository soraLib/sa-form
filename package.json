    "sugar-sajs": "1.1.6",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@co/eslint-config": "workspace:*",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@esbuild-kit/cjs-loader": "^2.4.0",
    "@types/lodash-es": "^4.17.6",
