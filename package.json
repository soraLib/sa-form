    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.31",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "sass": "^1.52.2",
    "tailwindcss": "^3.0.24",
    "typescript": "^5.1.6",
    "utility-types": "^3.10.0",
    "vite": "^2.9.17",
    "vue-tsc": "^1.8.3"
